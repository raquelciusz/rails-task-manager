<h1>Your Tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li>
<% if task.completed == true %>
<%= check_box_tag(:true) %>
<% else %>
<%= check_box_tag(:completed) %>
<% end %>
<%= link_to task.title, task_path(task) %>
<%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</li>
<% end %>
</ul>

<%= link_to '+ Add a new task >>', tasks_new_path %>
